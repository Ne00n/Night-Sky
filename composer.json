{
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "require": {
        "snapappointments/bootstrap-select": "^1.13",
        "matthiasmullie/minify": "^1.3"
    },
    "scripts": {
        "copyHandlebars": [
            "cp vendor/snapappointments/bootstrap-select/dist/css/bootstrap-select.min.css css/bootstrap-select.min.css",
            "cp vendor/snapappointments/bootstrap-select/dist/js/bootstrap-select.min.js js/bootstrap-select.min.js",
            "php minifier.php"
        ],
        "post-update-cmd": [
            "@copyHandlebars"
        ],
        "post-install-cmd": [
            "@copyHandlebars"
        ]
    }    
}
